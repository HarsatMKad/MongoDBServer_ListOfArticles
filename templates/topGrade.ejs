<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
</head>
<body style="background-color: #AFEEEE ">
  <form action="/" method="get">
    <button type="submit">Back</button>
  </form>

  <% for (let i = 0; i < data.length; i++) { %>
  <hr>
  <h2><%= (i +1) + " " + data[i].name %></h2>
  <h4><%= data[i].author %></h4>
  <h4><%= data[i].posting_date %></h4>

  <% if(data[i].avgGrade != null) { %>
  <h4>Grade:  <%= (data[i].avgGrade).toFixed(1)  %></h4>
  <% } %>

  <% if(i == 0) { %>
  <h4>Reviews count <%=data[i].reviews.length %></h4>
  <% } %>

  <form action="/article?id=<%= data[i]._id%>" method="post">
    <input type="submit" value="open">
  </form>
  <hr>
  <% } %>

</body>
</html>